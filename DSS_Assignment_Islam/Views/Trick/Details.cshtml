@model DSS_Assignment_Islam.Models.Trick

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trick</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrickName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrickName)
        </dd>
         <dd class="col-sm-10">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Actors
                        </th>
                         <th>
                            Actor Age
                        </th>
                                                 <th>
                            Actor Speciality
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Acts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Actor.ActorName)
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => item.Actor.ActorAge)
                            </td>
                                                         <td>
                                @Html.DisplayFor(modelItem => item.Actor.ActorSpacielity)
                            </td>
                            <td>
                                <a asp-controller="Act" asp-action="Delete" asp-route-id="@item.ActID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TrickID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
