@model IEnumerable<DSS_Assignment_Islam.Models.Act>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trick)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Actor.ActorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trick.TrickName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
