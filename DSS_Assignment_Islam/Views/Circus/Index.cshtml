@model IEnumerable<DSS_Assignment_Islam.Models.Circus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CircusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CircusLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CircusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CircusLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CircusID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CircusID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CircusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
