@model DSS_Assignment_Islam.Models.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorAge)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorSpacielity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorSpacielity)
        </dd>
                <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Circus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Circus.CircusName)
        </dd>
        <dd class="col-sm-10">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Trick
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Acts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Trick.TrickName)
                            </td>
                     
                            <td>
                                <a asp-controller="Act" asp-action="Delete" asp-route-id="@item.ActID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ActorID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
